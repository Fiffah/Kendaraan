@model Kendaraan.Models.VehicleModel

<link rel="stylesheet" href="~/Styles/style.css">

<div class="edit-container">
    <h2>Edit Kendaraan</h2>
    <form method="post" action="/Home/Edit">
        <input type="hidden" name="NomorRegistrasiKendaraan" value="@Model.NomorRegistrasiKendaraan" />

        <div class="form-group">
            <label>Nama Pemilik:</label>
            <input type="text" name="NamaPemilik" value="@Model.NamaPemilik" required />
        </div>

        <div class="form-group">
            <label>Alamat:</label>
            <textarea name="Alamat">@Model.Alamat</textarea>
        </div>

        <div class="form-group">
            <label>Merk Kendaraan:</label>
            <input type="text" name="MerkKendaraan" value="@Model.MerkKendaraan" />
        </div>

        <div class="form-group">
            <label>Tahun Pembuatan:</label>
            <input type="number" name="TahunPembuatan" value="@Model.TahunPembuatan" maxlength="4" />
        </div>

        <div class="form-group">
            <label>Kapasitas Silinder:</label>
            <input type="number" name="KapasitasSilinder" value="@Model.KapasitasSilinder" />
        </div>

        <div class="form-group">
            <label>Warna Kendaraan:</label>
            <input type="text" name="WarnaKendaraan" value="@Model.WarnaKendaraan" />
        </div>

        <div class="form-group">
            <label>Bahan Bakar:</label>
            <input type="text" name="BahanBakar" value="@Model.BahanBakar" />
        </div>

        <button type="submit" class="btn-save">Simpan Perubahan</button>
    </form>
    <a class="back-link" href="/Home/Index">Kembali</a>
</div>
